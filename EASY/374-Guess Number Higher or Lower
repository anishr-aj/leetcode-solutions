public class Solution extends GuessGame {
    public int guessNumber(int n) {
        int left = 1;
        int right = n;

        while (left < right) {
            int mid = (left + right) >>> 1;
            int guessResult = guess(mid);

            if (guessResult <= 0) {
                right = mid;
            } else {
                left = mid + 1;
            }
        }

        return left;
    }
}